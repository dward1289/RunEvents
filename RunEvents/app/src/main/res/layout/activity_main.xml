<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flineo"
    tools:context="com.madgeek.devonaward.runevents.Main">


    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/fivek"
        android:textSize="18pt"
        android:id="@+id/btn5"
        android:background="#000000"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:textSize="18pt"
        android:text="@string/tenk"
        android:id="@+id/btn10"
        android:typeface="serif"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewData"
        android:layout_below="@+id/btn5"
        android:layout_above="@+id/viewFavBtn" />

    <Button
        android:id="@+id/viewFavBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:text="@string/viewSaved"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
