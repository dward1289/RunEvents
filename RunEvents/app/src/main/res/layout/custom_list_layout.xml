<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtTitle"
            android:text="20TH ANNUAL RUN FOR LIFE"
            android:textColor="#081EC4"
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:typeface="serif"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textSize="12pt"
            android:gravity="center"
            android:ellipsize="none"
            android:maxLines="2" />

        <TextView
            android:id="@+id/txtRun"
            android:text="10K Run"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:typeface="serif"
            android:textColor="#F0A400"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="14pt"
            android:ellipsize="none"
            android:maxLines="2"/>


        <TextView
            android:id="@+id/txtDate"
            android:text="SEPTEMBER 25, 2014"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textColor="#35BD50"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:textSize="6pt"
            android:ellipsize="none"
            android:maxLines="2" />

        <TextView
            android:id="@+id/txtArea"
            android:text="CHARLOTTE, NC"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textColor="#35BD50"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="160dp"
            android:textSize="6pt"
            android:ellipsize="none"
            android:maxLines="2" />


</RelativeLayout>

