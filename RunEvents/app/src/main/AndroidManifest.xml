<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madgeek.devonaward.runevents" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventDetails"
            android:label="@string/title_activity_event_details"
            android:parentActivityName=".Main">
        </activity>
        <activity
            android:name=".AddEvent"
            android:label="@string/title_activity_add_event"
            android:parentActivityName=".Main">
        </activity>
        <activity
            android:name=".SignUpWeb"
            android:label="@string/title_activity_sign_up_web"
            android:parentActivityName=".Main">
        </activity>
        <activity
            android:name=".FavPage"
            android:label="@string/title_activity_fav_page"
            android:parentActivityName=".Main">
        </activity>
        <activity
            android:name=".FavPageCal"
            android:label="@string/title_activity_fav_page_cal"
            android:parentActivityName=".Main">
        </activity>
    </application>

</manifest>
